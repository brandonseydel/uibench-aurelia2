{
  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "esnext",
    "esModuleInterop": false,
    "baseUrl": "src",
    "paths": {
      "uibench-base/*": [
        "uibench-base/lib/*"
      ]
    },
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "incremental": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": false, //aurelia might use these in the view
    "removeComments": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
}